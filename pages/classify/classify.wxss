/* pages/classify/classify.wxss */
.home-tou{
  background-color:#9966FF;
  height: 200rpx;
  text-align: center;
}
.home-tou-wz{
  font-size: 50rpx;
  color: #fff;
}
/* 搜索框样式 */
.search
{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  width:100%;
  height:60rpx;
  background-color:whitesmoke;
  margin-top: 5%;
  border:1rpx solid whitesmoke;
  border-radius: 5rpx;

}

/* 搜索框提示文字样式 */
.search input
{
  font-size:30rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left:200rpx; 
}

/* 搜索框小图标 */
.search image
{ 
  width:40rpx;
  height:40rpx;
  padding-right:20rpx;
}
.food-jc{
  display: flex;
  padding: 10px;
}
/* 食材图片 */
.fodd-jc-img{
  width: 230rpx;
  height: 310rpx;
  margin-right: 20rpx;
}
.food-jc-info{
  flex: 1;
  line-height: 1.8
}
.food-jc-title{
  font-weight: bold;
  font-size: 35rpx;
}
.fodd-jc-ingredients{
  font-size: 28rpx;
}
.food-jc-burden{
  font-size: 25rpx;
}
.food-jc-comment{
  height: 60rpx;
  background: #e54847;
  color: #fff;
  font-size: 26rpx;
  
}